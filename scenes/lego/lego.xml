<scene version="2.1.0">

	<path value="../"/>
	<default name="sensors_filename" value="sensors.xml"/>
	<include filename="common.xml"/>
	<default name="emitter_scene" value="emitters/cathedral.xml"/>
	<include filename="$emitter_scene"/>

	<bsdf type="diffuse"  id="main-bsdf">
        <texture type="volume" name="reflectance">
            <volume type="gridvolume" name="volume">
                <string name="filename" value="textures/red.vol"/>
            </volume>
        </texture>
	</bsdf>
    <default name="main_bsdf_name" value="main-bsdf"/>

	<bsdf type="diffuse" id="empty-emitter-bsdf">
		<rgb value="0.000000" name="reflectance"/>
	</bsdf>
	<bsdf type="twosided" id="mat-Gray">
		<bsdf type="diffuse">
			<rgb value="0.296138 0.323143 0.391572" name="reflectance"/>
		</bsdf>
	</bsdf>
	<bsdf type="twosided" id="mat-transparent">
		<bsdf type="diffuse">
			<rgb value="0.162644 0.162644 0.162644" name="reflectance"/>
		</bsdf>
	</bsdf>
	<bsdf type="twosided" id="mat-Black">
		<bsdf type="diffuse">
			<rgb value="0.002808 0.002808 0.002808" name="reflectance"/>
		</bsdf>
	</bsdf>
	<bsdf type="twosided" id="mat-Red_Glass">
		<bsdf type="diffuse">
			<rgb value="1.000000 0.015209 0.003347" name="reflectance"/>
		</bsdf>
	</bsdf>
	<bsdf type="twosided" id="mat-Yellow">
		<bsdf type="diffuse">
			<rgb value="0.799103 0.502886 0.029557" name="reflectance"/>
		</bsdf>
	</bsdf>
	<bsdf type="diffuse" id="mat-RubberBand">
		<rgb value="1.000000 0.000000 0.300000" name="reflectance"/>
	</bsdf>
	<bsdf type="twosided" id="mat-Sand">
		<bsdf type="diffuse">
			<rgb value="0.529543 0.435094 0.248232" name="reflectance"/>
		</bsdf>
	</bsdf>
	<bsdf type="twosided" id="mat-Light_brown">
		<bsdf type="diffuse">
			<rgb value="0.201102 0.079997 0.034288" name="reflectance"/>
		</bsdf>
	</bsdf>
	<bsdf type="twosided" id="mat-Brown">
		<bsdf type="diffuse">
			<rgb value="0.097587 0.040915 0.020289" name="reflectance"/>
		</bsdf>
	</bsdf>
	<default name="shape_file" value="lego-shape.xml"/>
	<include filename="$shape_file"/>

</scene>
